<Window x:Class="RPG_WPF.alert"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RPG_WPF"
        mc:Ignorable="d"
        Title="Alert" Height="225" Width="400"  Background="#B0D7FF">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>
        <Label Content="Pro pokračování potřebujete zadat jméno" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label Content="a vybrat si classu pro svou postavu" Margin="0,30,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Button Grid.Row="4" Grid.Column="1" Margin="40,10,40,10" Background="#2D3142" Foreground="White" Click="Button_Click">Ok np bro, idk proc to je tak dlouhy tenhle popisek
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="15"></Setter>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>
